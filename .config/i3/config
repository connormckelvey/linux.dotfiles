# Custom Config settings
for_window [class=".*"] border pixel 0
gaps inner 15 
gaps outer 0
smart_borders on
new_window none

#Colors
set $darkergrey 	#383c4a
set $black		#2D303B
set $darkgrey 		#404552
set $grey 		#4b5162
set $lightgrey 		#7c818c
set $blue		#5294e2
set $white		#FFFFFF

bar {
    i3bar_command i3bar --transparency
    position top
    tray_output none
    mode dock
    height 56
    font pango: Ubuntu 12
    status_command 		i3blocks
    colors {
        background		$blackCC
        separator 		$grey
        statusline 		$grey
        focused_workspace	$blue $blue $white
        active_workspace 	$darkgrey $darkgrey $lightgrey
        inactive_workspace 	$darkgrey $darkgrey $lightgrey
        # urgent_workspace 	$blue $blue $blue
    }
}


